<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0C5959" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/str1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounding_lt"
                android:fontFamily="@font/iloveyou"
                android:gravity="center"
                android:text="현"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/str2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounding_rt"
                android:fontFamily="@font/iloveyou"
                android:gravity="center"
                android:text="수"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/str3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounding_lb"
                android:fontFamily="@font/iloveyou"
                android:gravity="center"
                android:text="고"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/str4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounding_rb"
                android:fontFamily="@font/iloveyou"
                android:gravity="center"
                android:text="사"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>